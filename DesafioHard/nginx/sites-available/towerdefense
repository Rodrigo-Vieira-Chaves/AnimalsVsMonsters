server {
        root /var/www/towerdefense/html_test;
        	
	index index.html index.htm index.nginx-debian.html;

        server_name test.dudeful.com www.test.dudeful.com;

        location / {
        	#alias /root/towerdefense/DesafioHard/frontend/src/;
	        try_files $uri $uri/ =404;
        }

        location /assets {
                autoindex on;
        }

    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/test.dudeful.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/test.dudeful.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
        root /var/www/towerdefense/html;
        
        index index.html index.htm index.nginx-debian.html;

        server_name animalsvsmonsters.dudeful.com www.animalsvsmonsters.dudeful.com;

        location / {
        	#alias /root/towerdefense/DesafioHard/frontend/src/;
	        try_files $uri $uri/ =404;
        }

        location /assets {
                autoindex on;
        }

        listen [::]:443 ssl ipv6only=on; # managed by Certbot
        listen 443 ssl; # managed by Certbot
        ssl_certificate /etc/letsencrypt/live/animalsvsmonsters.dudeful.com/fullchain.pem; # managed by Certbot
        ssl_certificate_key /etc/letsencrypt/live/animalsvsmonsters.dudeful.com/privkey.pem; # managed by Certbot
        include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
        if ($host = animalsvsmonsters.dudeful.com) {
                return 301 https://$host$request_uri;
        } # managed by Certbot

        listen 80;
        listen [::]:80;

        server_name animalsvsmonsters.dudeful.com www.animalsvsmonsters.dudeful.com;
        return 404; # managed by Certbot
}

# BELLOW SERVER IS JUST TO PROXY data.dudeful.com:443 TO data.dudeful.com:5000
server {
        server_name data.dudeful.com; # managed by Certbot

        location / {
                proxy_pass http://data.dudeful.com:5000;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header Host $host;
                proxy_cache_bypass $http_upgrade;
        }

        listen [::]:443 ssl; # managed by Certbot
        listen 443 ssl; # managed by Certbot
        ssl_certificate /etc/letsencrypt/live/data.dudeful.com/fullchain.pem; # managed by Certbot
        ssl_certificate_key /etc/letsencrypt/live/data.dudeful.com/privkey.pem; # managed by Certbot
        include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
        if ($host = data.dudeful.com) {
                return 301 https://$host$request_uri;
        } # managed by Certbot

        listen 80 ;
        listen [::]:80 ;

        server_name data.dudeful.com;
        return 404; # managed by Certbot
}

server {
    if ($host = test.dudeful.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80;
        listen [::]:80;

        server_name test.dudeful.com www.test.dudeful.com;
    return 404; # managed by Certbot


}
